<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/resultHeadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/result_heading_text"
        android:textSize="30sp"
        android:paddingBottom="30dp"/>

    <TextView
        android:id="@+id/totalTrialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="@string/dummy_number_of_trials_text"
        android:textSize="20sp"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/numOfCorrectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="@string/number_of_correct_matches_text"
        android:textSize="20sp"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/numOfIncorrectText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="@string/number_of_incorrect_matches_text"
        android:textSize="20sp"
        android:paddingBottom="35dp"/>

    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Try Again" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home" />
</LinearLayout>